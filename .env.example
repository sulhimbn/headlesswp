# Environment Variables
WORDPRESS_URL=https://mitrabantennews.com
WORDPRESS_API_URL=https://mitrabantennews.com/wp-json
NEXT_PUBLIC_WORDPRESS_URL=https://mitrabantennews.com
NEXT_PUBLIC_WORDPRESS_API_URL=https://mitrabantennews.com/wp-json

# GraphQL Configuration
NEXT_PUBLIC_WORDPRESS_GRAPHQL_URL=https://mitrabantennews.com/graphql
WORDPRESS_API_KEY=your_wordpress_api_key_here

# Authentication (if required)
WP_USERNAME=your_wp_username
WP_PASSWORD=your_wp_application_password

# Next.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Database Configuration (Docker)
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=your_secure_mysql_password_here
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# Development
NODE_ENV=development

# Security Configuration
# CSP Report Endpoint (optional)
NEXT_PUBLIC_CSP_REPORT_ENDPOINT=/api/csp-report

# Security Headers Configuration
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true